<div class="topic-parameters">

    <div class="topic-parameter-group">
        <div class="topic-description">
            <span>Map color mode</span>
        </div>
        <div class="topic-parameter">
            <span>Light </span>
            <div class="map-mode-select-light">
                <i class="fa fa-check-square-o"></i>
            </div>
        </div>
        <div class="topic-parameter">
            <!-- <div class="slider-container" id="slider-exclusiveness"></div> -->
            <span>Dark </span>
            <div class="map-mode-select-dark">
                <i class="fa fa-check-square-o"></i>
            </div>
        </div>
    </div>

    <div class="layer-control">
        <span>Show Heatmap: </span>
        <div class="heatmap-toggle">
            <i class="fa fa-check-square-o"></i>
        </div>
    </div>
