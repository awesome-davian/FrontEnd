        <div class="topic-description">
            <span>Topic Counts</span>
        </div>
        <div class="topic-parameter">
            <span>Cluster Count: </span>
            <input class="topic-count" type="text" name="count-cluster" value="{{clusterCount}}"/>
        </div>
        <div class="topic-parameter">
            <span>Word Count: </span>
            <input class="topic-count" type="text" name="count-word" value="{{wordCount}}"/>
        </div>
    </div>
    <div class="topic-parameter-group">
        <div class="topic-description">
            <span>Algorithm</span>
        </div>
        <div class="topic-parameter">
            <span>StanNMF </span>
            <div class="algo-select-stan">
                <i class="fa fa-check-square-o"></i>
            </div>
        </div>
        <div class="topic-parameter">
            <!-- <div class="slider-container" id="slider-exclusiveness"></div> -->
